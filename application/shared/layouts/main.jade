doctype html
html(lang="de")
	block config
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

		if title
			title= title + sitetitle
		else
			title= sitetitle

		link(rel="stylesheet", href="/stylesheets/main.css")

	//- Body
	body
		//- Skip to content
		#skiptocontent: a(href="#maincontent") Zum Hauptinhalt springen

		//- Browse happy
		| <!--[if lt IE 9]>
		#browsehappy Sie benutzen <b>einen veralteten Browser</b>. Bitte <a href="http://http://browsehappy.com/?locale=de_DE/">aktualisieren Sie Ihren Browser</a>, um diese Webseite vollständig nutzen zu können.
		| <![endif]-->

		//- Header
		header(role="banner")
			.container
				//- Logo
				h1: a(href="/")=sitetitle

				//- Navigation
				nav#main-navigation(role="navigation")
					include ../navigations/navigation

		//- Page
		main#main-container
			.container
				//- Breadcrumb
				include ../navigations/breadcrumb

				//- Content
				block content

				//- Sidebar
				block sidebar

		//- Footer
		footer(role="contentinfo")
			.container

		//- JavaScripts
		block js
			script(data-main="/javascripts/main", src="/components/requirejs/require.js")
